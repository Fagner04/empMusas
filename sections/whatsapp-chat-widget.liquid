                <span class="whatsapp-widget__schedule-day">{{ block.settings.day }}</span>
                <span class="whatsapp-widget__schedule-time">{{ block.settings.time }}</span>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
        
        {%- if section.settings.schedule_note != blank -%}
          <div class="whatsapp-widget__schedule-note">
            {{ section.settings.schedule_note }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

