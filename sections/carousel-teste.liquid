<style>
  .carousel-teste {
    padding: 60px 0;
    background: var(--background, #fff);
    min-height: 400px;
  }
  
  .carousel-teste__header {
    text-align: center;
    margin-bottom: 40px;
    position: relative;
  }
  
  .carousel-teste__title {
    font-size: 28px;
    margin-bottom: 10px;
    color: var(--heading-color, #333);
    font-family: var(--heading-font-family, inherit);
    font-weight: var(--heading-font-weight, 600);
  }
  
  .carousel-teste__subtitle {
    font-size: 16px;
    color: var(--text-color, #666);
    margin-bottom: 30px;
  }
  
  /* Menu Flutuante Centralizado */
  .carousel-teste__menu {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
    position: relative;
  }
  
  .carousel-teste__button {
    background: linear-gradient(135deg, var(--primary-button-background, #007bff), var(--accent-color, #0056b3));
    color: var(--primary-button-text-color, white);
    border: none;
    padding: 14px 24px;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    font-size: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
  }
  
  .carousel-teste__button:hover {
    background: var(--accent-color, #0056b3);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 123, 255, 0.4);
  }
  
  .carousel-teste__button svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }
  
  .carousel-teste__menu.is-open .carousel-teste__button svg {
    transform: rotate(180deg);
  }
  
  .carousel-teste__dropdown {
    position: absolute;
    top: calc(100% + 15px);
    left: 50%;
    transform: translateX(-50%);
    background: var(--secondary-background, white);
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    min-width: 280px;
    opacity: 0;
    visibility: hidden;
    transform: translateX(-50%) translateY(-10px) scale(0.95);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--border-color, #e0e0e0);
    z-index: 100;
  }
  
  .carousel-teste__menu.is-open .carousel-teste__dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0) scale(1);
  }
  
  .carousel-teste__dropdown-list {
    padding: 12px 0;
    max-height: 300px;
    overflow-y: auto;
  }
  
  .carousel-teste__dropdown button {
    display: block;
    width: 100%;
    padding: 12px 20px;
    border: none;
    background: none;
    text-align: left;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-color, #333);
    transition: all 0.2s ease;
    position: relative;
  }
  
  .carousel-teste__dropdown button:hover {
    background: var(--border-color, #f8f9fa);
    color: var(--accent-color, #007bff);
  }
  
  .carousel-teste__dropdown button.is-active {
    background: var(--accent-color, #007bff);
    color: var(--secondary-background, white);
    font-weight: 600;
  }
  
  .carousel-teste__dropdown button:last-child {
    border-top: 1px solid var(--border-color, #e0e0e0);
    margin-top: 8px;
    padding-top: 16px;
    font-weight: 600;
  }
  
  /* Container dos Produtos */
  .carousel-teste__products-wrapper {
    position: relative;
    overflow: hidden;
  }
  
  .carousel-teste__products {
    display: flex;
    gap: 24px;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 20px 0;
  }
  
  .carousel-teste__products::-webkit-scrollbar {
    display: none;
  }
  
  /* Gradientes nas bordas */
  .carousel-teste__products-wrapper::before,
  .carousel-teste__products-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 30px;
    z-index: 2;
    pointer-events: none;
  }
  
  .carousel-teste__products-wrapper::before {
    left: 0;
    background: linear-gradient(to right, var(--background, #fff), transparent);
  }
  
  .carousel-teste__products-wrapper::after {
    right: 0;
    background: linear-gradient(to left, var(--background, #fff), transparent);
  }
  
  /* Cards dos Produtos */
  .carousel-teste__product {
    flex: 0 0 300px;
    transition: all 0.3s ease;
    opacity: 1;
    transform: scale(1);
  }
  
  .carousel-teste__product.is-hidden {
    opacity: 0;
    transform: scale(0.8);
    pointer-events: none;
    margin: 0 -150px;
    flex: 0 0 0px;
  }
  
  .carousel-teste__product:hover {
    transform: translateY(-5px);
  }
  
  /* Usando classes do tema para consistência */
  .carousel-teste__product .product-item {
    background: var(--secondary-background, white);
    border-radius: var(--border-radius-theme, 12px);
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid var(--border-color, #f0f0f0);
  }
  
  .carousel-teste__product:hover .product-item {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border-color: var(--accent-color, #007bff);
  }
  
  .carousel-teste__product-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: var(--border-color, #f8f9fa);
  }
  
  .carousel-teste__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .carousel-teste__product:hover .carousel-teste__product-image img {
    transform: scale(1.05);
  }
  
  .carousel-teste__product-info {
    padding: 20px;
  }
  
  .carousel-teste__product-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--heading-color, #333);
    margin-bottom: 8px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .carousel-teste__product-price {
    font-size: 18px;
    font-weight: 700;
    color: var(--accent-color, #007bff);
    margin-bottom: 12px;
  }
  
  .carousel-teste__product-button {
    width: 100%;
    background: var(--primary-button-background, #007bff);
    color: var(--primary-button-text-color, white);
    border: none;
    padding: 12px 16px;
    border-radius: var(--border-radius-theme, 8px);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 14px;
  }
  
  .carousel-teste__product-button:hover {
    background: var(--accent-color, #0056b3);
    transform: translateY(-1px);
  }
  
  /* Placeholder para produtos sem imagem */
  .carousel-teste__product-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    color: #6c757d;
    font-size: 14px;
    font-weight: 500;
  }
  
  /* Responsividade */
  @media screen and (max-width: 640px) {
    .carousel-teste {
      padding: 40px 0;
    }
    
    .carousel-teste__title {
      font-size: 24px;
    }
    
    .carousel-teste__button {
      padding: 12px 20px;
      font-size: 14px;
    }
    
    .carousel-teste__dropdown {
      min-width: 250px;
      left: 50%;
      right: auto;
    }
    
    .carousel-teste__product {
      flex: 0 0 260px;
    }
    
    .carousel-teste__products {
      gap: 16px;
    }
  }
  
  @media screen and (min-width: 1024px) {
    .carousel-teste__product {
      flex: 0 0 320px;
    }
    
    .carousel-teste__products {
      gap: 30px;
    }
  }
</style>

<section class="carousel-teste" data-section-id="{{ section.id }}">
  <div class="container">
    
    <!-- Header Centralizado -->
    <div class="carousel-teste__header">
      <h2 class="carousel-teste__title heading h2">{{ section.settings.title | default: 'Produtos em Destaque' }}</h2>
      {%- if section.settings.subtitle != blank -%}
        <p class="carousel-teste__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>
    
    <!-- Menu Flutuante Centralizado -->
    <div class="carousel-teste__menu" id="menu-{{ section.id }}">
      <button class="carousel-teste__button" onclick="toggleMenu('{{ section.id }}')">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Escolher Categoria
      </button>
      <div class="carousel-teste__dropdown">
        <div class="carousel-teste__dropdown-list">
          {% for block in section.blocks %}
            {% if block.type == 'category' and block.settings.collection != blank %}
              {% assign collection = collections[block.settings.collection] %}
              {% if collection.products.size > 0 %}
                <button onclick="filterCategory('{{ block.settings.collection }}', '{{ section.id }}', this)">
                  {{ block.settings.title | default: collection.title }}
                </button>
              {% endif %}
            {% endif %}
          {% endfor %}
          <button onclick="showAll('{{ section.id }}', this)" class="is-active">Todos os Produtos</button>
        </div>
      </div>
    </div>
    
    <!-- Container dos Produtos -->
    <div class="carousel-teste__products-wrapper">
      <div class="carousel-teste__products" id="products-{{ section.id }}">
        {% assign all_products = '' %}
        {% assign product_count = 0 %}
        
        {% comment %} Coletamos produtos de todas as coleções {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'category' and block.settings.collection != blank %}
            {% assign collection = collections[block.settings.collection] %}
            {% if collection.products.size > 0 %}
              {% for product in collection.products limit: section.settings.products_per_category %}
                {% unless all_products contains product.id %}
                  {% assign all_products = all_products | append: product.id | append: ',' %}
                  
                  <div class="carousel-teste__product" data-collection="{{ block.settings.collection }}">
                    <div class="product-item">
                      <div class="carousel-teste__product-image">
                        {% if product.featured_image %}
                          <img src="{{ product.featured_image | img_url: '400x400' }}" 
                               alt="{{ product.title | escape }}"
                               loading="lazy">
                        {% else %}
                          <div class="carousel-teste__product-placeholder">
                            {% render 'icon', icon: 'placeholder' %}
                          </div>
                        {% endif %}
                      </div>
                      
                      <div class="carousel-teste__product-info">
                        <h3 class="carousel-teste__product-title">{{ product.title }}</h3>
                        <div class="carousel-teste__product-price">{{ product.price | money }}</div>
                        <button class="carousel-teste__product-button" onclick="window.location.href='{{ product.url }}'">
                          Ver Produto
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  {% assign product_count = product_count | plus: 1 %}
                {% endunless %}
              {% endfor %}
            {% endif %}
          {% endif %}
        {% endfor %}
        
        {% comment %} Se não há produtos configurados, pega de qualquer coleção {% endcomment %}
        {% if product_count == 0 %}
          {% for collection in collections limit: 3 %}
            {% if collection.products.size > 0 %}
              {% for product in collection.products limit: 4 %}
                {% unless all_products contains product.id %}
                  {% assign all_products = all_products | append: product.id | append: ',' %}
                  
                  <div class="carousel-teste__product" data-collection="{{ collection.handle }}">
                    <div class="product-item">
                      <div class="carousel-teste__product-image">
                        {% if product.featured_image %}
                          <img src="{{ product.featured_image | img_url: '400x400' }}" 
                               alt="{{ product.title | escape }}"
                               loading="lazy">
                        {% else %}
                          <div class="carousel-teste__product-placeholder">
                            Sem Imagem
                          </div>
                        {% endif %}
                      </div>
                      
                      <div class="carousel-teste__product-info">
                        <h3 class="carousel-teste__product-title">{{ product.title }}</h3>
                        <div class="carousel-teste__product-price">{{ product.price | money }}</div>
                        <button class="carousel-teste__product-button" onclick="window.location.href='{{ product.url }}'">
                          Ver Produto
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  {% assign product_count = product_count | plus: 1 %}
                {% endunless %}
              {% endfor %}
            {% endif %}
          {% endfor %}
        {% endif %}
        
        {% comment %} Se ainda não há produtos, mostra placeholders {% endcomment %}
        {% if product_count == 0 %}
          {% for i in (1..6) %}
            <div class="carousel-teste__product">
              <div class="product-item">
                <div class="carousel-teste__product-image">
                  <div class="carousel-teste__product-placeholder">
                    Produto {{ i }}
                  </div>
                </div>
                
                <div class="carousel-teste__product-info">
                  <h3 class="carousel-teste__product-title">Produto de Exemplo {{ i }}</h3>
                  <div class="carousel-teste__product-price">R$ {{ i }}9,99</div>
                  <button class="carousel-teste__product-button">
                    Ver Produto
                  </button>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
    
  </div>
</section>

<script>
  function toggleMenu(sectionId) {
    const menu = document.getElementById('menu-' + sectionId);
    menu.classList.toggle('is-open');
  }
  
  function filterCategory(collection, sectionId, button) {
    const products = document.querySelectorAll('#products-' + sectionId + ' .carousel-teste__product');
    const buttons = document.querySelectorAll('#menu-' + sectionId + ' button');
    
    // Remover classe ativa de todos os botões
    buttons.forEach(btn => btn.classList.remove('is-active'));
    
    // Adicionar classe ativa ao botão clicado
    button.classList.add('is-active');
    
    // Filtrar produtos com animação
    let visibleCount = 0;
    products.forEach((product, index) => {
      setTimeout(() => {
        if (product.dataset.collection === collection) {
          product.classList.remove('is-hidden');
          visibleCount++;
        } else {
          product.classList.add('is-hidden');
        }
      }, index * 50);
    });
    
    // Fechar menu
    toggleMenu(sectionId);
    
    console.log('Filtrado por:', collection, '- Produtos visíveis:', visibleCount);
  }
  
  function showAll(sectionId, button) {
    const products = document.querySelectorAll('#products-' + sectionId + ' .carousel-teste__product');
    const buttons = document.querySelectorAll('#menu-' + sectionId + ' button');
    
    // Remover classe ativa de todos os botões
    buttons.forEach(btn => btn.classList.remove('is-active'));
    
    // Adicionar classe ativa ao botão "Todos"
    button.classList.add('is-active');
    
    // Mostrar todos os produtos com animação
    products.forEach((product, index) => {
      setTimeout(() => {
        product.classList.remove('is-hidden');
      }, index * 30);
    });
    
    // Fechar menu
    toggleMenu(sectionId);
    
    console.log('Mostrando todos os produtos:', products.length);
  }
  
  // Fechar menu ao clicar fora
  document.addEventListener('click', function(e) {
    if (!e.target.closest('.carousel-teste__menu')) {
      document.querySelectorAll('.carousel-teste__menu').forEach(menu => {
        menu.classList.remove('is-open');
      });
    }
  });
  
  // Fechar menu com ESC
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      document.querySelectorAll('.carousel-teste__menu').forEach(menu => {
        menu.classList.remove('is-open');
      });
    }
  });
</script>

